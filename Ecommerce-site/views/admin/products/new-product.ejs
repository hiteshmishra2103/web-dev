<%- include("../../shared/includes/head", {pageTitle:"Add new product"}) %>
<link rel="stylesheet" href="/styles/base.css">
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include("../../shared/includes/header") %> 
<main>
<h1>
    Add new product
</h1>
<form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
<p>
    <label for="title">Title</label>
    <input type="text" name="title" required id="title">
</p>

<p>
    <label for="image">Product Image</label>
    <input type="file" name="image" id="image" accept="image/png, image/jpg" required >
</p>

<p>
    <label for="summary">Product summary</label>
    <input type="text" name="summary" id="summary" maxlength="250" required >
</p>

<p>
    <label for="price">Price</label>
    <input type="number" name="price" id="price" min="1" step="1" required >
</p>

<p>
    <label for="description">Product description</label>
    <textarea name="description" id="description" cols="30" rows="7" value="Write the product description here..." required></textarea>
</p>

<p>
    <button type="reset" class="btn btn-alt">Reset Form</button>
    <button type="submit" class="btn">Save</button>
</p>
</form>
</main>
<%- include("../../shared/includes/footer") %> 